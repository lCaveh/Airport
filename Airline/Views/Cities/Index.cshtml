@{
  Layout = "_Layout";
}

<div class="container">
    <h1>Cities</h1>

    @if (@Model.Count == 0)
    {
    <h3>No cities have been added yet!</h3>
    }

    @foreach (var city in Model)
    {
    <h3><a href="/cities/@city.GetId()">@city.GetName()</a></h3>
    }

    <p><a href='/flights/new'>Add a new flight</a></p>
    <p><a href='/'>Back home</a></p>
</div>
